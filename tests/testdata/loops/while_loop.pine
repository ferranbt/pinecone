// Test while loops

// Simple while loop
var i = 0
var sum1 = 0
while i < 5
    sum1 := sum1 + i
    i := i + 1
log.info(sum1)

// While with break
var j = 0
var sum2 = 0
while j < 10
    if j == 5
        break
    sum2 := sum2 + j
    j := j + 1
log.info(sum2)

// While with continue (sum only odd numbers)
var k = 0
var sum3 = 0
while k < 10
    k := k + 1
    if k % 2 == 0
        continue
    sum3 := sum3 + k
log.info(sum3)

// Expected output:
// 10
// 10
// 25
